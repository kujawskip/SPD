<Window x:Class="SpacialPrisonerDilemma.View.InitialCondition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InitialCondition" Height="452.866" Width="800.343">
    <Window.Resources>
        <DataTemplate x:Key="CmbTemplate">
            <WrapPanel Margin="0 5 0 5" Height="30">
                <Image Width="60" Height="60" Stretch="Fill" Source="{Binding Source}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,15,0"/>

            </WrapPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid Margin="0,0,-35,0">
        <Canvas Name="Canvas" MouseWheel="Canvas_OnMouseWheel" MouseDown="Canvas_OnMouseDown"  HorizontalAlignment="Left" Height="205" Margin="20,57,0,0" VerticalAlignment="Top" Width="205"/>
        <Button Content="Losowy"  HorizontalAlignment="Left" Height="20" Margin="29,328,0,0" VerticalAlignment="Top" Width="48" Click="Button_Click"/>
        <Button Content="Akceptuj" IsEnabled="{Binding ConditionLoaded}" HorizontalAlignment="Left" Height="20" Margin="29,354,0,0" VerticalAlignment="Top" Width="50" Click="Button_Click_1"/>
        <Canvas Name="Legend" HorizontalAlignment="Left" Height="218" Margin="528,76,0,0" VerticalAlignment="Top" Width="149" MouseDown="Legend_OnMouseDown"/>
        <StackPanel Margin="29,291,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"  Orientation="Horizontal">
            <Slider Name="RandomSize" Height="21"  Minimum="2" Maximum="120" Width="200" TickFrequency="1" IsSnapToTickEnabled="True"/>
            <TextBlock Text="{Binding ElementName=RandomSize, Path=Value}"></TextBlock>
        </StackPanel>
        <ComboBox Name="ComboBox" ItemTemplate="{StaticResource CmbTemplate}" HorizontalAlignment="Left" Height="23" Margin="386,57,0,0" VerticalAlignment="Top" Width="87"/>
        <ComboBox x:Name="ComboBoxCopy"  HorizontalAlignment="Left" Height="20" Margin="20,23,0,0" VerticalAlignment="Top" Width="390" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button Content="Wczytaj" HorizontalAlignment="Left" Height="21" Margin="118,353,0,0" VerticalAlignment="Top" Width="53" Click="ButtonBase_OnClick1"/>
        <Button Content="Zapisz" IsEnabled="{Binding ConditionLoaded}" HorizontalAlignment="Left" Height="21" Margin="118,327,0,0" VerticalAlignment="Top" Width="51" Click="ButtonBase_OnClick2"/>
        <RadioButton GroupName="Operation" Checked="RadioPixel_OnChecked" Unchecked="RadioPixel_OnChecked" Name="RadioPixel"  Content="Zmiana komórki" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="386,154,0,0"/>
        <RadioButton GroupName="Operation" Checked="RadioPixel_OnChecked" Unchecked="RadioPixel_OnChecked" Name="RadioFill" Content="Zastąpienie koloru" HorizontalAlignment="Left" Height="32" Margin="386,127,0,0" VerticalAlignment="Top" Width="123"/>
        <CheckBox Name="VonNeumann"  Content="Sąsiedztwo Von Neumanna" HorizontalAlignment="Left" Height="20" Margin="260,291,0,0" VerticalAlignment="Top" Width="170"/>
    </Grid>
</Window>
