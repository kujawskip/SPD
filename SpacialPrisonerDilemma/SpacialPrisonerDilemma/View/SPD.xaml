<Window x:Class="SpacialPrisonerDilemma.View.SPD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SPD" Height="446.269" Width="646.343" Closing="Window_Closing">
    <Canvas>
        <Button Content="Start" Name="StartStop" HorizontalAlignment="Left" Height="21" VerticalAlignment="Top" Width="45" RenderTransformOrigin="1.786,2.495" Click="Button_Click" Canvas.Left="432" Canvas.Top="384"/>
        <Canvas Name="Canvas" MouseWheel="Canvas_OnMouseWheel" Height="357" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="390"/>
        <Canvas HorizontalAlignment="Right" Name="Legenda" Height="152" VerticalAlignment="Top" Width="196" Canvas.Left="432" Canvas.Top="130"/>
        <StackPanel Orientation="Horizontal" Canvas.Left="10" Canvas.Top="384" Height="31">
            <Slider Name="Slider" Height="11" Canvas.Left="22" Canvas.Top="384" Width="322" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding Iteration,Mode=TwoWay}" Maximum="{Binding StateCount}"/>
            <TextBox Text="{Binding ElementName=Slider,Path=Value}"></TextBox>
        </StackPanel>
    </Canvas>
</Window>
